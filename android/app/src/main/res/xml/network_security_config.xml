<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!--
        Allow cleartext WebSocket (ws://) to any host.
        Required for local device linking over LAN/hotspot â€” private IPs are dynamic
        so we cannot enumerate them statically. This is appropriate for a local-first,
        offline app that never sends cleartext to external servers.
    -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system"/>
        </trust-anchors>
    </base-config>
</network-security-config>
